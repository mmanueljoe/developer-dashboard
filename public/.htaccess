# Apache server configuration
# Place this file in your dist/ directory after build, or configure your server

# Set correct MIME types for JavaScript modules
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/javascript .jsx
  AddType image/svg+xml .svg
  AddType application/json .json
</IfModule>

# Enable CORS for module scripts (if needed)
<IfModule mod_headers.c>
  <FilesMatch "\.(js|mjs|jsx)$">
    Header set Content-Type "application/javascript; charset=utf-8"
  </FilesMatch>
</IfModule>

# Ensure favicon is served correctly
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteRule ^favicon\.svg$ /favicon.svg [L]
</IfModule>
